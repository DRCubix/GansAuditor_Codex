# Development Environment Configuration for GansAuditor Codex
# This file contains development-friendly settings with relaxed timeouts and verbose logging

# ============================================================================
# Core Synchronous Mode Settings
# ============================================================================
ENABLE_GAN_AUDITING=true
ENABLE_SYNCHRONOUS_AUDIT=true

# ============================================================================
# Development Timeout and Concurrency Settings (Relaxed)
# ============================================================================
AUDIT_TIMEOUT_SECONDS=60
MAX_CONCURRENT_AUDITS=2
MAX_CONCURRENT_SESSIONS=10
AUDIT_QUEUE_TIMEOUT=120000

# ============================================================================
# Development Completion Criteria (More Lenient)
# ============================================================================
SYNC_AUDIT_TIER1_SCORE=90
SYNC_AUDIT_TIER1_LOOPS=8
SYNC_AUDIT_TIER2_SCORE=85
SYNC_AUDIT_TIER2_LOOPS=12
SYNC_AUDIT_TIER3_SCORE=80
SYNC_AUDIT_TIER3_LOOPS=16
SYNC_AUDIT_HARD_STOP_LOOPS=20

# ============================================================================
# Stagnation Detection (Less Aggressive)
# ============================================================================
ENABLE_STAGNATION_DETECTION=true
SYNC_AUDIT_STAGNATION_START_LOOP=12
SYNC_AUDIT_STAGNATION_THRESHOLD=0.98

# ============================================================================
# Development Features (All Enabled for Testing)
# ============================================================================
ENABLE_AUDIT_CACHING=true
ENABLE_SESSION_PERSISTENCE=true
ENABLE_CODEX_CONTEXT_MANAGEMENT=true

# ============================================================================
# Verbose Feedback for Development
# ============================================================================
SYNC_AUDIT_FEEDBACK_DETAIL_LEVEL=verbose

# ============================================================================
# Session Management (Shorter Retention for Development)
# ============================================================================
SYNC_AUDIT_STATE_DIRECTORY=.mcp-gan-state-dev
MAX_SESSION_AGE=43200000  # 12 hours
SESSION_CLEANUP_INTERVAL=1800000  # 30 minutes

# ============================================================================
# Monitoring and Observability (Enabled for Development)
# ============================================================================
ENABLE_SYNC_AUDIT_METRICS=true
ENABLE_SYNC_AUDIT_HEALTH_CHECKS=true

# ============================================================================
# Progress Indicators (More Frequent for Development)
# ============================================================================
ENABLE_AUDIT_PROGRESS_INDICATORS=true
AUDIT_PROGRESS_INDICATOR_INTERVAL=10000

# ============================================================================
# Error Handling (More Retries for Development)
# ============================================================================
AUDIT_TIMEOUT_RETRY_ATTEMPTS=2
AUDIT_PARTIAL_RESULTS_ON_TIMEOUT=true

# ============================================================================
# Legacy Compatibility
# ============================================================================
DISABLE_THOUGHT_LOGGING=false

# ============================================================================
# System Prompt Configuration (Development)
# ============================================================================
GAN_AUDITOR_PROMPT_ENABLED=true
GAN_AUDITOR_PROMPT_VERSION=2.0.0
GAN_AUDITOR_IDENTITY_NAME=Kilo Code Dev
GAN_AUDITOR_STANCE=constructive-adversarial
GAN_AUDITOR_AUTHORITY=flexible

# Development workflow settings (more lenient)
GAN_AUDITOR_WORKFLOW_STEPS=8
GAN_AUDITOR_ENFORCE_WORKFLOW_ORDER=false
GAN_AUDITOR_ALLOW_WORKFLOW_SKIPPING=true
GAN_AUDITOR_EVIDENCE_REQUIRED=true

# Development quality framework (balanced approach)
GAN_AUDITOR_QUALITY_DIMENSIONS=6
GAN_AUDITOR_WEIGHTING_SCHEME=balanced
GAN_AUDITOR_SCORING_SCALE=0-100
GAN_AUDITOR_AGGREGATION_METHOD=weighted-average

# Development completion criteria (more iterations allowed)
GAN_AUDITOR_COMPLETION_TIERS=3
GAN_AUDITOR_KILL_SWITCHES=3
GAN_AUDITOR_SHIP_GATES=5

# Development integration (all enabled for testing)
GAN_AUDITOR_SESSION_MANAGEMENT=true
GAN_AUDITOR_CODEX_INTEGRATION=true
GAN_AUDITOR_CONTEXT_AWARENESS=true
GAN_AUDITOR_PERFORMANCE_OPTIMIZATION=true

# Development security (relaxed for testing)
GAN_AUDITOR_SANITIZE_PII=true
GAN_AUDITOR_VALIDATE_COMMANDS=false
GAN_AUDITOR_RESPECT_PERMISSIONS=false
GAN_AUDITOR_FLAG_VULNERABILITIES=true

# Development performance (higher limits)
GAN_AUDITOR_CONTEXT_TOKEN_LIMIT=300000
GAN_AUDITOR_AUDIT_TIMEOUT_MS=60000
GAN_AUDITOR_ENABLE_CACHING=true
GAN_AUDITOR_ENABLE_PROGRESS_TRACKING=true

# ============================================================================
# Development Debug Settings (Optional)
# ============================================================================
# Uncomment these for additional debugging information
# DEBUG_SYNCHRONOUS_WORKFLOW=true
# DEBUG_SESSION_MANAGEMENT=true
# DEBUG_AUDIT_PERFORMANCE=true