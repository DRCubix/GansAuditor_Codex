# GansAuditor_Codex System Prompt Configuration
# Copy this file to .env or integrate into your existing environment configuration

# ============================================================================
# Core System Prompt Settings
# ============================================================================

# Enable/disable system prompt functionality
GAN_AUDITOR_ENABLE_SYSTEM_PROMPT=true

# System prompt version and identity
GAN_AUDITOR_PROMPT_VERSION=2.0
GAN_AUDITOR_IDENTITY_NAME="Kilo Code"
GAN_AUDITOR_STANCE=constructive-adversarial

# ============================================================================
# Workflow Configuration
# ============================================================================

# Enforce workflow step ordering (recommended: true)
GAN_AUDITOR_ENFORCE_WORKFLOW_ORDER=true

# Require evidence for all audit findings (recommended: true)
GAN_AUDITOR_EVIDENCE_REQUIRED=true

# ============================================================================
# Completion Criteria and Kill Switches
# ============================================================================

# Number of completion tiers (default: 3)
GAN_AUDITOR_COMPLETION_TIERS=3

# Stagnation detection threshold (0.0-1.0, default: 0.95)
GAN_AUDITOR_STAGNATION_THRESHOLD=0.95

# Maximum audit iterations before hard stop (default: 25)
GAN_AUDITOR_MAX_ITERATIONS=25

# ============================================================================
# Performance and Resource Management
# ============================================================================

# Context token limit for prompt rendering (default: 200000)
GAN_AUDITOR_CONTEXT_TOKEN_LIMIT=200000

# Audit timeout in milliseconds (default: 30000 = 30 seconds)
GAN_AUDITOR_AUDIT_TIMEOUT_MS=30000

# Enable prompt caching for performance (recommended: true)
GAN_AUDITOR_ENABLE_PROMPT_CACHING=true

# Prompt cache maximum age in milliseconds (default: 300000 = 5 minutes)
GAN_AUDITOR_PROMPT_CACHE_MAX_AGE=300000

# ============================================================================
# Security and Safety Settings
# ============================================================================

# Sanitize personally identifiable information (recommended: true)
GAN_AUDITOR_SANITIZE_PII=true

# Validate command safety before execution (recommended: true for production)
GAN_AUDITOR_VALIDATE_COMMANDS=true

# Respect file permissions and security boundaries (recommended: true for production)
GAN_AUDITOR_RESPECT_PERMISSIONS=true

# Flag potential security vulnerabilities (recommended: true)
GAN_AUDITOR_FLAG_VULNERABILITIES=true

# ============================================================================
# Integration Settings
# ============================================================================

# Enhance Codex CLI requests with system prompt context (recommended: true)
GAN_AUDITOR_ENHANCE_CODEX_REQUESTS=true

# Process audit responses with completion analysis (recommended: true)
GAN_AUDITOR_PROCESS_RESPONSES=true

# Manage completion criteria and kill switches (recommended: true)
GAN_AUDITOR_MANAGE_COMPLETION=true

# Track progress across audit iterations (recommended: true)
GAN_AUDITOR_TRACK_PROGRESS=true

# ============================================================================
# Development vs Production Settings
# ============================================================================

# For development environments, consider these settings:
# GAN_AUDITOR_MAX_ITERATIONS=10
# GAN_AUDITOR_AUDIT_TIMEOUT_MS=15000
# GAN_AUDITOR_CONTEXT_TOKEN_LIMIT=100000
# GAN_AUDITOR_VALIDATE_COMMANDS=false
# GAN_AUDITOR_RESPECT_PERMISSIONS=false

# For production environments, use the defaults or:
# GAN_AUDITOR_MAX_ITERATIONS=25
# GAN_AUDITOR_AUDIT_TIMEOUT_MS=30000
# GAN_AUDITOR_CONTEXT_TOKEN_LIMIT=200000
# GAN_AUDITOR_VALIDATE_COMMANDS=true
# GAN_AUDITOR_RESPECT_PERMISSIONS=true

# ============================================================================
# Logging and Debugging
# ============================================================================

# Enable detailed logging for system prompt operations
GAN_AUDITOR_PROMPT_DEBUG_LOGGING=false

# Log prompt rendering performance metrics
GAN_AUDITOR_LOG_PROMPT_PERFORMANCE=false

# Log completion analysis details
GAN_AUDITOR_LOG_COMPLETION_ANALYSIS=false